{
  "name": "wix-code-project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "rm -rf dist && npm run build:backend && npm run build:frontend",
    "build:backend": "rm -rf dist/backend && tsc --build src/backend/tsconfig.json && npx wix-code-ts build-backend",
    "build:frontend": "rm -rf dist/frontend && tsc --build src/public/tsconfig.json && npx wix-code-ts build-frontend",
    "build:check-dependencies": "depcruise --config .dependency-cruiser.js typescript",
    "build:watch:backend": "npm-watch build:backend",
    "build:watch:frontend": "npm-watch build:frontend",
    "build:watch:check-dependencies": "npm-watch build:check-dependencies",
    "build:watch": "run-p build:watch:*",
    "wix:pull": "npx corvid pull --override",
    "wix:editor": "npx corvid open-editor",
    "wix": "npm run wix:pull && npm run build && npm run wix:editor"
  },
  "watch": {
    "build:backend": {
      "patterns": [
        "typescript/backend"
      ],
      "extensions": "ts"
    },
    "build:frontend": {
      "patterns": [
        "typescript/frontend",
        "typescript/backend/universal"
      ],
      "extensions": "ts"
    },
    "build:check-dependencies": {
      "patterns": [
        "typescript/backend",
        "typescript/frontend"
      ],
      "extensions": "ts"
    }
  },
  "devDependencies": {
    "@types/lodash": "^4.14.168",
    "@types/node": "^15.0.3",
    "corvid-cli": "^0.2.12",
    "corvid-types": "^0.1.130",
    "del": "^6.0.0",
    "dependency-cruiser": "^9.26.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.9.0",
    "recursive-copy": "^2.0.11",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@astrauka/wix-code-typescript-wrapper": "link:..",
    "lodash": "4.17.21"
  }
}
