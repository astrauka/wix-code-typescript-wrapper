{
  "compilerOptions": {
    "outDir": "../dist/scripts/",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "types" : ["node"],
    "declaration": true,
    "preserveConstEnums": true,
  },
  "include": ["**/*.ts"]
}
